<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - GAMINGCORE</title>
    <style>
        /* Main Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background-color: #0f0f1a;
            color: white;
            font-family: 'Arial', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Styles - Matching Your Site */
        nav {
            background: #1a1a2e;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .nav-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
        }
        
        .nav-links {
            display: flex;
            gap: 1.5rem;
        }
        
        .nav-links a {
            color: #e6e6e6;
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .signup-btn {
            background: #4cc9f0;
            color: #0f0f1a;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-weight: bold;
            text-decoration: none;
        }

        /* Form Container */
        .container {
            max-width: 400px;
            margin: 2rem auto;
            padding: 2rem;
            flex: 1;
        }

        h1 {
            margin-bottom: 1.5rem;
            color: #4cc9f0;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #b8b8d1;
        }

        input {
            width: 100%;
            padding: 0.8rem;
            background: #252538;
            border: 1px solid #2a2a3a;
            border-radius: 4px;
            color: white;
            font-size: 1rem;
        }

        input:focus {
            outline: none;
            border-color: #4cc9f0;
        }

        button {
            background: #4cc9f0;
            color: #0f0f1a;
            padding: 0.8rem;
            width: 100%;
            border: none;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        button:hover {
            background: #3aa8d8;
        }

        .error {
            color: #ff6b6b;
            margin-bottom: 1rem;
            padding: 0.8rem;
            background: rgba(255, 107, 107, 0.1);
            border-radius: 4px;
        }

        .success {
            color: #6bff6b;
            margin-bottom: 1rem;
            padding: 0.8rem;
            background: rgba(107, 255, 107, 0.1);
            border-radius: 4px;
        }

        p {
            margin-top: 1rem;
            text-align: center;
            color: #b8b8d1;
        }

        a {
            color: #4cc9f0;
            text-decoration: none;
            font-weight: bold;
        }

        .password-hint {
            font-size: 0.8rem;
            color: #7a7a8c;
            margin-top: -0.5rem;
            margin-bottom: 1rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            nav {
                flex-direction: column;
                padding: 1rem;
            }
            
            .nav-links {
                margin-top: 1rem;
                flex-wrap: wrap;
                justify-content: center;
            }
            
            .container {
                padding: 1rem;
                margin: 1rem auto;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar with Correct Sign Up Link -->
    <nav>
        <a href="/" class="nav-brand">GAMINGCORE</a>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/leaderboard">Leaderboard</a>
            <a href="/login">Login</a>
            <a href="/register" class="signup-btn">Sign Up Free</a>
        </div>
    </nav>

    <div class="container">
        <h1>Create Account</h1>
        
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        
        <% if (message && message.type === 'success') { %>
            <div class="success"><%= message.text %></div>
        <% } %>

        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    placeholder="Enter your username" 
                    required
                    value="<%= formData && formData.username ? formData.username : '' %>"
                >
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="Enter your email" 
                    required
                    value="<%= formData && formData.email ? formData.email : '' %>"
                >
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Create a password" 
                    required
                    minlength="8"
                >
                <p class="password-hint">Must be at least 8 characters</p>
            </div>
            
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    placeholder="Confirm your password" 
                    required
                    minlength="8"
                >
            </div>
            
            <button type="submit">Sign Up Free</button>
        </form>
        
        <p>Already have an account? <a href="/login">Login</a></p>
    </div>

    <!-- Footer -->
    <footer style="text-align: center; padding: 1.5rem; background: #1a1a2e; margin-top: auto;">
        &copy; 2025 GAMINGCORE. All rights reserved.
    </footer>

    <!-- Client-side Validation (optional) -->
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
            
            return true;
        });
    </script>
</body>
</html>