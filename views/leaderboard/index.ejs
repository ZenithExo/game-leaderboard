<% include ../layout/main.ejs %>
<h1>Leaderboard</h1>
<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Player</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% players.forEach((player, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.username %></td>
        <td><%= player.score %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
